---
import Layout from "@/layouts/Layout.astro";
import { getLocalizedPath } from "@/i18n/utils";
const lang = "es";
---

<Layout
  title="Nuestros Servicios - Astro Batavia"
  description="Descubra nuestros servicios tecnológicos integrales que incluyen creación de contenido, consultoría técnica y recursos educativos para empresas y desarrolladores."
  lang={lang}>
