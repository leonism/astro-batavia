export const prerender = true;
---
import { type CollectionEntry } from 'astro:content';
import BlogPost from '@/layouts/BlogPost.astro';
import { isValidLanguage } from '@/i18n/utils';
import { BlogService } from '@/services/BlogService';

export async function getStaticPaths() {
	return await BlogService.getStaticPaths();
}

type Props = CollectionEntry<'blog'>;

const { lang } = Astro.params;

// Validate language
if (!lang || !isValidLanguage(lang)) {
  return Astro.redirect('/404');
}

const post = Astro.props;
const { Content, headings = [], remarkPluginFrontmatter } = await post.render();
const readingTime = remarkPluginFrontmatter?.readingTime;
console.log('Extracted headings:', headings);
---

<BlogPost {...post.data} slug={post.slug} headings={headings} readingTime={readingTime}>
  <Content />
</BlogPost>
