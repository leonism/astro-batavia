---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import BlogCard from '@/components/BlogCard.astro';
import { getLangFromUrl, useTranslations, isValidLanguage } from '@/i18n/utils';

export async function getStaticPaths() {
  return [
    { params: { lang: 'es' } },
    { params: { lang: 'ja' } },
  ];
}

const { lang } = Astro.params;

// Validate language
if (!lang || !isValidLanguage(lang)) {
  return Astro.redirect('/404');
}

const t = useTranslations(lang);

// Get latest blog posts for this language
const allPosts = await getCollection('blog', ({ id, data }) => {
  return id.startsWith(`${lang}/`) && !data.draft;
});

// Sort posts by publication date (newest first)
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
const latestPosts = sortedPosts.slice(0, 3);
---

<Layout 
  title="AstroBlog - Modern Multi-Language Blog"
  description={t('meta.description')}
  lang={lang}
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary-50 via-white to-primary-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 py-20 lg:py-32">
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%239C92AC" fill-opacity="0.05"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-50"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-gray-100 mb-6">
          {lang === 'es' ? (
            <>Moderno Blog <span class="text-primary-600 dark:text-primary-400">Multiidioma</span></>
          ) : lang === 'ja' ? (
            <>モダンな<span class="text-primary-600 dark:text-primary-400">多言語</span>ブログ</>
          ) : (
            <>Modern <span class="text-primary-600 dark:text-primary-400">Multi-Language</span> Blog</>
          )}
        </h1>
        <p class="text-xl sm:text-2xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto">
          {lang === 'es' 
            ? 'Construido con Astro.js, con rendimiento ultrarrápido, gestión de contenido fluida y diseño hermoso.'
            : lang === 'ja'
            ? 'Astro.jsで構築され、超高速パフォーマンス、シームレスなコンテンツ管理、美しいデザインを特徴としています。'
            : 'Built with Astro.js, featuring lightning-fast performance, seamless content management, and beautiful design.'
          }
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href={`/${lang}/blog`}
            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all duration-200 hover:scale-105"
          >
            {lang === 'es' ? 'Explorar Artículos' : lang === 'ja' ? '記事を探索' : 'Explore Articles'}
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
          <a 
            href={`/${lang}/search`}
            class="inline-flex items-center px-6 py-3 border-2 border-primary-600 dark:border-primary-400 text-base font-medium rounded-md text-primary-600 dark:text-primary-400 bg-transparent hover:bg-primary-50 dark:hover:bg-primary-900/20 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all duration-200"
          >
            <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            {lang === 'es' ? 'Buscar Contenido' : lang === 'ja' ? 'コンテンツを検索' : 'Search Content'}
          </a>
        </div>
      </div>
      
      <!-- Feature highlights -->
      <div class="mt-20 grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center p-6 rounded-lg bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm border border-gray-200 dark:border-gray-700">
          <div class="w-12 h-12 mx-auto mb-4 bg-primary-100 dark:bg-primary-900/30 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2">
            {lang === 'es' ? 'Ultrarrápido' : lang === 'ja' ? '超高速' : 'Lightning Fast'}
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            {lang === 'es' 
              ? 'Potenciado por la arquitectura de islas de Astro para un rendimiento óptimo'
              : lang === 'ja'
              ? 'Astroのアイランドアーキテクチャによる最適なパフォーマンス'
              : 'Powered by Astro\'s island architecture for optimal performance'
            }
          </p>
        </div>
        
        <div class="text-center p-6 rounded-lg bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm border border-gray-200 dark:border-gray-700">
          <div class="w-12 h-12 mx-auto mb-4 bg-primary-100 dark:bg-primary-900/30 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2">
            {lang === 'es' ? 'Multiidioma' : lang === 'ja' ? '多言語' : 'Multi-Language'}
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            {lang === 'es' 
              ? 'Soporte completo para contenido en inglés, español y japonés'
              : lang === 'ja'
              ? '英語、スペイン語、日本語コンテンツの完全サポート'
              : 'Full support for English, Spanish, and Japanese content'
            }
          </p>
        </div>
        
        <div class="text-center p-6 rounded-lg bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm border border-gray-200 dark:border-gray-700">
          <div class="w-12 h-12 mx-auto mb-4 bg-primary-100 dark:bg-primary-900/30 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2">
            {lang === 'es' ? 'Fácil Gestión' : lang === 'ja' ? '簡単管理' : 'Easy Management'}
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            {lang === 'es' 
              ? 'CMS basado en Git con vista previa en vivo y edición de contenido enriquecido'
              : lang === 'ja'
              ? 'ライブプレビューとリッチコンテンツ編集機能を備えたGitベースCMS'
              : 'Git-based CMS with live preview and rich content editing'
            }
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Posts Section -->
  {latestPosts.length > 0 && (
    <section class="py-16 bg-white dark:bg-gray-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">
            {lang === 'es' ? 'Últimos Artículos' : lang === 'ja' ? '最新記事' : 'Latest Articles'}
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            {lang === 'es' 
              ? 'Descubre nuestras últimas perspectivas e historias'
              : lang === 'ja'
              ? '最新の洞察とストーリーを発見'
              : 'Discover our newest insights and stories'
            }
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {latestPosts.map((post) => (
            <BlogCard post={post} lang={lang} />
          ))}
        </div>
        
        <div class="text-center mt-12">
          <a 
            href={`/${lang}/blog`}
            class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/20 hover:bg-primary-100 dark:hover:bg-primary-900/30 transition-all duration-200"
          >
            {lang === 'es' ? 'Ver Todos los Artículos' : lang === 'ja' ? 'すべての記事を見る' : 'View All Articles'}
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Newsletter Section -->
  <section class="py-16 bg-primary-50 dark:bg-gray-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4">
        {lang === 'es' ? 'Mantente Actualizado' : lang === 'ja' ? '最新情報を入手' : 'Stay Updated'}
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
        {lang === 'es' 
          ? 'Recibe los últimos artículos e ideas directamente en tu bandeja de entrada'
          : lang === 'ja'
          ? '最新の記事と洞察をあなたの受信箱に直接お届けします'
          : 'Get the latest articles and insights delivered to your inbox'
        }
      </p>
      
      <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
        <input
          type="email"
          placeholder={lang === 'es' ? 'Ingresa tu email' : lang === 'ja' ? 'メールアドレスを入力' : 'Enter your email'}
          class="flex-1 px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400 focus:border-transparent bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100"
          required
        />
        <button
          type="submit"
          class="px-6 py-3 bg-primary-600 text-white font-medium rounded-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all duration-200"
        >
          {lang === 'es' ? 'Suscribirse' : lang === 'ja' ? '購読' : 'Subscribe'}
        </button>
      </form>
    </div>
  </section>
</Layout>
