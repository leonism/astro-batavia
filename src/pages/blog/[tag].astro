---
/**
 * @file Unified Blog Tag Route
 * @description Handles rendering of blog posts filtered by tag across all languages.
 * Standardized path: /blog/[tag]
 *
 * Astro.js Tip: Consolidating tags into a single root-level route simplifies
 * the site architecture and makes it easier for users to discover related
 * content across different languages.
 */

import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import BlogCard from '@/components/blog/BlogCard.astro';
import { useTranslations, slugifyTag, defaultLang } from '@/i18n/utils';
import { PAGINATION_POSTS_PER_PAGE } from '@/consts';

/**
 * Generates static paths for all unique tags found across all blog posts.
 */
export async function getStaticPaths() {
  const allPosts = await getCollection('blog', ({ data }) => {
    return import.meta.env.PROD ? !data.draft : true;
  });

  // Extract all unique tags
  const uniqueTags = [...new Set(allPosts.flatMap((post) => post.data.tags || []))];

  return uniqueTags.map((tag) => ({
    params: { tag: slugifyTag(tag) },
    props: { tag },
  }));
}

const { tag } = Astro.props;
const lang = defaultLang;
const t = useTranslations(lang as any);

// Fetch all posts matching this tag across ALL languages
const posts = await getCollection('blog', ({ data }) => {
  if (data.draft && import.meta.env.PROD) return false;
  return data.tags?.some(t => slugifyTag(t) === slugifyTag(tag));
});

// Sort posts by date, newest first
const sortedPosts = posts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Pagination settings
const postsPerPage = PAGINATION_POSTS_PER_PAGE;
const postsToDisplay = sortedPosts.slice(0, postsPerPage);
---

<Layout
  title={`#${tag} | ${t('nav.blog')}`}
  description={`Explore all articles tagged with #${tag} across our multilingual blog.`}
  lang={lang}
>
  <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-12 text-center">
      <h1 class="mb-4 text-4xl font-bold text-gray-900 dark:text-gray-100 sm:text-5xl">
        #{tag}
      </h1>
      <p class="mx-auto max-w-3xl text-xl text-gray-600 dark:text-gray-300">
        Articles tagged with #{tag}
      </p>
    </div>

    <!-- Posts Grid -->
    {
      postsToDisplay.length > 0 ? (
        <div
          id="posts-container"
          class="mb-12 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3"
        >
          {postsToDisplay.map((post: CollectionEntry<'blog'>) => (
            <div class="post-item animate-fade-in">
              <BlogCard post={post} lang={post.id.split('/')[0] as any} />
            </div>
          ))}
        </div>
      ) : (
        <div class="py-12 text-center">
          <p class="text-gray-500 dark:text-gray-400">No articles found.</p>
        </div>
      )
    }
  </div>
</Layout>
