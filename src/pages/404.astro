---
import Layout from '@/layouts/Layout.astro';
import { useTranslations } from '@/i18n/utils';

const t = useTranslations('en'); // Default to English for 404 page
---

<Layout
  title="404 Not Found"
  description="The page you are looking for could not be found."
  lang="en"
>
  <section class="flex h-full items-center p-16 dark:bg-gray-900 dark:text-gray-100">
    <div class="container mx-auto my-8 flex flex-col items-center justify-center px-5">
      <div class="max-w-md text-center">
        <h2 class="mb-8 text-9xl font-extrabold dark:text-gray-600">
          <span class="sr-only">Error</span>
          404
        </h2>
        <p class="text-2xl font-semibold md:text-3xl">{t('404.title')}</p>
        <p class="mb-8 mt-4 dark:text-gray-400">{t('404.description')}</p>
        <a
          rel="noopener noreferrer"
          href="/"
          class="rounded px-8 py-3 font-semibold dark:bg-primary-600 dark:text-gray-900"
        >
          {t('404.back-to-homepage')}
        </a>
      </div>
    </div>
  </section>
</Layout>
