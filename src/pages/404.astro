---
import Layout from '@/layouts/Layout.astro';
import { useTranslations } from '@/i18n/utils';

const t = useTranslations('en'); // Default to English for 404 page
---

<Layout title="404 Not Found" description="The page you are looking for could not be found." lang="en">
  <section class="flex items-center h-full p-16 dark:bg-gray-900 dark:text-gray-100">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-extrabold text-9xl dark:text-gray-600">
          <span class="sr-only">Error</span>404
        </h2>
        <p class="text-2xl font-semibold md:text-3xl">{t('404.title')}</p>
        <p class="mt-4 mb-8 dark:text-gray-400">{t('404.description')}</p>
        <a rel="noopener noreferrer" href="/" class="px-8 py-3 font-semibold rounded dark:bg-primary-600 dark:text-gray-900">
          {t('404.back-to-homepage')}
        </a>
      </div>
    </div>
  </section>
</Layout>
