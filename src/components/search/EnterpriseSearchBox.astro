---
interface Props {
  placeholder: string;
  lang: string;
  showSuggestions?: boolean;
  showFilters?: boolean;
  enableVoiceSearch?: boolean;
  posts: any[];
}

const { 
  placeholder, 
  lang, 
  showSuggestions = true, 
  showFilters = true,
  enableVoiceSearch = true,
  posts
} = Astro.props;
---

<div class="enterprise-search-container max-w-4xl mx-auto mb-8">
  <!-- Main Search Box -->
  <div class="relative search-box-wrapper">
    <!-- Search Icon -->
    <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none z-10">
      <svg class="h-6 w-6 text-gray-400 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
    </div>

    <!-- Search Input -->
    <input
      type="search"
      id="enterprise-search-input"
      placeholder={placeholder}
      class="enterprise-search-input block w-full pl-12 pr-20 py-4 text-lg border-2 border-gray-200 dark:border-gray-600 rounded-xl leading-6 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:ring-4 focus:ring-primary-500/20 focus:border-primary-500 dark:focus:border-primary-400 transition-all duration-300 shadow-lg hover:shadow-xl"
      autocomplete="off"
      spellcheck="false"
      data-lang={lang}
      aria-label="Search articles"
      aria-expanded="false"
      aria-haspopup="listbox"
      role="combobox"
    />

    <!-- Right Side Controls -->
    <div class="absolute inset-y-0 right-0 pr-4 flex items-center space-x-2">
      <!-- Voice Search Button -->
      {enableVoiceSearch && (
        <button
          id="voice-search-btn"
          type="button"
          class="voice-search-btn p-2 text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors duration-200 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700"
          aria-label="Voice search"
          title="Voice search (Click and speak)"
        >
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"></path>
          </svg>
        </button>
      )}

      <!-- Clear Button -->
      <button
        id="clear-search-btn"
        type="button"
        class="clear-search-btn hidden p-2 text-gray-400 hover:text-red-600 dark:hover:text-red-400 transition-colors duration-200 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700"
        aria-label="Clear search"
        title="Clear search"
      >
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <!-- Keyboard Shortcut -->
      <kbd class="hidden sm:inline-flex items-center px-2 py-1 border border-gray-300 dark:border-gray-600 rounded text-xs font-medium text-gray-500 dark:text-gray-400 bg-gray-50 dark:bg-gray-700">
        ⌘K
      </kbd>
    </div>

    <!-- Loading Indicator -->
    <div id="search-loading" class="absolute inset-y-0 right-16 pr-4 items-center hidden">
      <div class="animate-spin rounded-full h-5 w-5 border-2 border-primary-500 border-t-transparent"></div>
    </div>
  </div>

  <!-- Search Suggestions Dropdown -->
  {showSuggestions && (
    <div 
      id="search-suggestions" 
      class="search-suggestions absolute top-full left-0 right-0 mt-2 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-600 rounded-xl shadow-2xl z-50 hidden max-h-96 overflow-y-auto"
      role="listbox"
      aria-label="Search suggestions"
    >
      <!-- Popular Searches -->
      <div id="popular-searches" class="p-4 border-b border-gray-100 dark:border-gray-700">
        <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Popular Searches</h4>
        <div id="popular-searches-list" class="flex flex-wrap gap-2">
          <!-- Popular search items will be inserted here -->
        </div>
      </div>

      <!-- Dynamic Suggestions -->
      <div id="dynamic-suggestions" class="p-2">
        <!-- Dynamic suggestions will be inserted here -->
      </div>

      <!-- Recent Searches -->
      <div id="recent-searches" class="p-4 border-t border-gray-100 dark:border-gray-700 hidden">
        <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Recent Searches</h4>
        <div id="recent-searches-list">
          <!-- Recent search items will be inserted here -->
        </div>
      </div>
    </div>
  )}

  <!-- Quick Filters -->
  {showFilters && (
    <div class="quick-filters mt-4 flex flex-wrap gap-2 items-center">
      <span class="text-sm font-medium text-gray-600 dark:text-gray-400">Quick filters:</span>
      <button class="filter-chip" data-filter-type="date" data-filter-value="week">
        <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        This Week
      </button>
      <button class="filter-chip" data-filter-type="date" data-filter-value="month">
        <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        This Month
      </button>
      <button class="filter-chip" data-filter-type="sort" data-filter-value="popular">
        <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
        </svg>
        Most Popular
      </button>
      <button class="filter-chip" data-filter-type="sort" data-filter-value="recent">
        <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Most Recent
      </button>
    </div>
  )}

  <!-- Search Stats -->
  <div id="search-stats" class="search-stats mt-3 text-sm text-gray-500 dark:text-gray-400 hidden">
    <span id="search-time"></span>
    <span class="mx-2">•</span>
    <span id="search-count"></span>
  </div>
</div>

<style>
  .enterprise-search-container {
    position: relative;
  }

  .search-box-wrapper {
    position: relative;
  }

  .enterprise-search-input {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .enterprise-search-input:focus {
    transform: translateY(-2px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  .search-suggestions {
    backdrop-filter: blur(10px);
    background: rgba(255, 255, 255, 0.95);
  }

  .dark .search-suggestions {
    background: rgba(31, 41, 55, 0.95);
  }

  .filter-chip {
    @apply inline-flex items-center px-3 py-1.5 text-xs font-medium rounded-full border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:border-primary-500 hover:text-primary-600 dark:hover:text-primary-400 transition-all duration-200 hover:shadow-md;
  }

  .filter-chip.active {
    @apply bg-primary-600 text-white border-primary-600 shadow-md;
  }

  .suggestion-item {
    @apply flex items-center px-4 py-3 hover:bg-gray-50 dark:hover:bg-gray-700 cursor-pointer transition-colors duration-150;
  }

  .suggestion-item.selected {
    @apply bg-primary-50 dark:bg-primary-900/20 text-primary-700 dark:text-primary-300;
  }

  .suggestion-icon {
    @apply w-4 h-4 mr-3 text-gray-400;
  }

  .suggestion-text {
    @apply flex-1 text-sm;
  }

  .suggestion-type {
    @apply text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wide;
  }

  .search-highlight {
    @apply bg-yellow-200 dark:bg-yellow-800 px-1 rounded;
  }

  .voice-search-btn.recording {
    @apply text-red-500 animate-pulse;
  }

  .search-stats {
    animation: fadeIn 0.3s ease-in-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .enterprise-search-input {
      @apply text-base py-3 pl-10 pr-16;
    }
    
    .quick-filters {
      @apply hidden;
    }
  }
</style>

<script>
  import { searchIntegration } from "@/features/search/searchIntegration";
  import { searchUtils } from "@/features/search/searchIntegration";
  import type { SearchableDocument, SearchResult } from "@/features/search/EnterpriseSearchEngine";

  const posts: SearchableDocument[] = Astro.props.posts;

  document.addEventListener("astro:page-load", async () => {
    const searchInput = document.getElementById("enterprise-search-input") as HTMLInputElement;
    const searchSuggestions = document.getElementById("search-suggestions");
    const popularSearchesList = document.getElementById("popular-searches-list");
    const dynamicSuggestions = document.getElementById("dynamic-suggestions");
    const recentSearchesList = document.getElementById("recent-searches-list");
    const searchLoading = document.getElementById("search-loading");
    const clearSearchBtn = document.getElementById("clear-search-btn");
    const voiceSearchBtn = document.getElementById("voice-search-btn");
    const searchStats = document.getElementById("search-stats");
    const searchTimeSpan = document.getElementById("search-time");
    const searchCountSpan = document.getElementById("search-count");

    if (!searchInput || !searchSuggestions || !popularSearchesList || !dynamicSuggestions || !recentSearchesList || !searchLoading || !clearSearchBtn || !searchStats || !searchTimeSpan || !searchCountSpan) return;

    // Initialize search integration
    if (!searchIntegration.isReady()) {
      await searchIntegration.initialize(posts);
    }

    let currentSearchQuery = "";
    let activeSuggestionIndex = -1;

    // Helper to show/hide dropdown
    const toggleSuggestionsDropdown = (show: boolean) => {
      if (show) {
        searchSuggestions.classList.remove("hidden");
        searchInput.setAttribute("aria-expanded", "true");
      } else {
        searchSuggestions.classList.add("hidden");
        searchInput.setAttribute("aria-expanded", "false");
        activeSuggestionIndex = -1; // Reset active suggestion
      }
    };

    // Render popular searches
    const renderPopularSearches = () => {
      const popular = searchIntegration.getPopularSearches();
      popularSearchesList.innerHTML = popular.map(query => 
        `<button class="filter-chip popular-search-item" data-query="${query}">#${query}</button>`
      ).join("");

      popularSearchesList.querySelectorAll(".popular-search-item").forEach(item => {
        item.addEventListener("click", () => {
          searchInput.value = item.getAttribute("data-query") || "";
          performSearch(searchInput.value);
          toggleSuggestionsDropdown(false);
        });
      });
    };

    // Render recent searches
    const renderRecentSearches = () => {
      const recent = searchIntegration.getSearchHistory();
      if (recent.length > 0) {
        document.getElementById("recent-searches")?.classList.remove("hidden");
        recentSearchesList.innerHTML = recent.map(query => 
          `<a href="#" class="suggestion-item recent-search-item" data-query="${query}">
            <svg class="suggestion-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            <span class="suggestion-text">${query}</span>
          </a>`
        ).join("");

        recentSearchesList.querySelectorAll(".recent-search-item").forEach(item => {
          item.addEventListener("click", (e) => {
            e.preventDefault();
            searchInput.value = item.getAttribute("data-query") || "";
            performSearch(searchInput.value);
            toggleSuggestionsDropdown(false);
          });
        });
      } else {
        document.getElementById("recent-searches")?.classList.add("hidden");
      }
    };

    // Render dynamic suggestions
    const renderDynamicSuggestions = async (query: string) => {
      if (query.length < 2) {
        dynamicSuggestions.innerHTML = "";
        return;
      }
      const suggestions = await searchIntegration.getSuggestions(query);
      dynamicSuggestions.innerHTML = suggestions.map((s, index) => 
        `<a href="#" class="suggestion-item ${index === activeSuggestionIndex ? 'selected' : ''}" data-query="${s}" data-index="${index}">
          <svg class="suggestion-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
          <span class="suggestion-text">${searchUtils.highlightText(s, query)}</span>
        </a>`
      ).join("");

      dynamicSuggestions.querySelectorAll(".suggestion-item").forEach(item => {
        item.addEventListener("click", (e) => {
          e.preventDefault();
          searchInput.value = item.getAttribute("data-query") || "";
          performSearch(searchInput.value);
          toggleSuggestionsDropdown(false);
        });
      });
    };

    // Perform search and display results
    const performSearch = searchUtils.debounce(async (query: string) => {
      currentSearchQuery = query;
      searchLoading.classList.remove("hidden");
      clearSearchBtn.classList.add("hidden");
      toggleSuggestionsDropdown(false);

      try {
        const { results, totalCount, searchTime } = await searchIntegration.search(query);
        
        // Dispatch a custom event with search results
        const event = new CustomEvent("search-results-updated", {
          detail: { results, totalCount, searchTime, query, lang: searchInput.dataset.lang }
        });
        document.dispatchEvent(event);

        searchTimeSpan.textContent = searchUtils.formatSearchTime(searchTime);
        searchCountSpan.textContent = searchUtils.formatResultCount(totalCount);
        searchStats.classList.remove("hidden");

      } catch (error) {
        console.error("Search failed:", error);
        // Dispatch empty results on error
        const event = new CustomEvent("search-results-updated", {
          detail: { results: [], totalCount: 0, searchTime: 0, query, lang: searchInput.dataset.lang }
        });
        document.dispatchEvent(event);
        searchStats.classList.add("hidden");
      } finally {
        searchLoading.classList.add("hidden");
        if (query.length > 0) {
          clearSearchBtn.classList.remove("hidden");
        }
      }
    }, searchIntegration.getConfig().debounceMs);

    // Event Listeners
    searchInput.addEventListener("input", (e) => {
      const query = (e.target as HTMLInputElement).value;
      if (query.length > 0) {
        toggleSuggestionsDropdown(true);
        renderDynamicSuggestions(query);
        renderRecentSearches();
      } else {
        toggleSuggestionsDropdown(false);
        renderPopularSearches();
        renderRecentSearches();
      }
      performSearch(query);
    });

    searchInput.addEventListener("focus", () => {
      if (searchInput.value.length === 0) {
        renderPopularSearches();
        renderRecentSearches();
      }
      toggleSuggestionsDropdown(true);
    });

    searchInput.addEventListener("keydown", (e) => {
      const suggestionItems = Array.from(dynamicSuggestions.querySelectorAll(".suggestion-item"));
      if (e.key === "ArrowDown") {
        e.preventDefault();
        activeSuggestionIndex = Math.min(activeSuggestionIndex + 1, suggestionItems.length - 1);
        suggestionItems.forEach((item, index) => {
          if (index === activeSuggestionIndex) {
            item.classList.add("selected");
            searchInput.value = item.getAttribute("data-query") || "";
          } else {
            item.classList.remove("selected");
          }
        });
      } else if (e.key === "ArrowUp") {
        e.preventDefault();
        activeSuggestionIndex = Math.max(activeSuggestionIndex - 1, 0);
        suggestionItems.forEach((item, index) => {
          if (index === activeSuggestionIndex) {
            item.classList.add("selected");
            searchInput.value = item.getAttribute("data-query") || "";
          } else {
            item.classList.remove("selected");
          }
        });
      } else if (e.key === "Enter") {
        e.preventDefault();
        if (activeSuggestionIndex !== -1) {
          const selectedSuggestion = suggestionItems[activeSuggestionIndex];
          searchInput.value = selectedSuggestion.getAttribute("data-query") || "";
        }
        performSearch(searchInput.value);
        toggleSuggestionsDropdown(false);
      } else if (e.key === "Escape") {
        toggleSuggestionsDropdown(false);
        searchInput.blur();
      }
    });

    clearSearchBtn.addEventListener("click", () => {
      searchInput.value = "";
      performSearch("");
      toggleSuggestionsDropdown(false);
      searchInput.focus();
    });

    if (voiceSearchBtn && searchUtils.supportsVoiceSearch()) {
      voiceSearchBtn.classList.remove("hidden");
      const SpeechRecognition = (window as any).SpeechRecognition || (window as any).webkitSpeechRecognition;
      const recognition = new SpeechRecognition();
      recognition.continuous = false;
      recognition.lang = lang;

      recognition.onstart = () => {
        voiceSearchBtn.classList.add("recording");
        console.log("Voice search started...");
      };

      recognition.onresult = (event: any) => {
        const transcript = event.results[0][0].transcript;
        searchInput.value = transcript;
        performSearch(transcript);
        voiceSearchBtn.classList.remove("recording");
      };

      recognition.onerror = (event: any) => {
        console.error("Speech recognition error:", event.error);
        voiceSearchBtn.classList.remove("recording");
      };

      recognition.onend = () => {
        voiceSearchBtn.classList.remove("recording");
        console.log("Voice search ended.");
      };

      voiceSearchBtn.addEventListener("click", () => {
        recognition.start();
      });
    } else if (voiceSearchBtn) {
      voiceSearchBtn.classList.add("hidden");
    }

    // Initial render of popular and recent searches
    renderPopularSearches();
    renderRecentSearches();
  });
</script>

<script define:vars={{ posts }}>
  // Make posts data available to the search client
  window.__SEARCH_DATA__ = posts.map((post) => ({
    id: post.id,
    title: post.data.title,
    description: post.data.description,
    content: post.body || "",
    tags: post.data.tags || [],
    url: `/${post.slug.replace(/^(en\/)?blog\//, "blog/")}`,
    pubDate: post.data.pubDate,
    author: post.data.author || "",
    category: post.data.categories?.[0] || "",
    lang: post.data.lang || "en",
    slug: post.slug,
    readingTime: post.data.readingTime || 0,
  }));
</script>