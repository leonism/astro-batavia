---
interface Props {
  alternateUrls: {
    en: string;
    es: string;
    ja: string;
  };
  hreflangMap: {
    en: string;
    es: string;
    ja: string;
  };
}

const { alternateUrls, hreflangMap } = Astro.props;
---

{
  Object.entries(alternateUrls).map(([langCode, url]) => (
    <link rel="alternate" hreflang={hreflangMap[langCode as keyof typeof hreflangMap]} href={url} />
  ))
}
<link rel="alternate" hreflang="x-default" href={alternateUrls.en} />
