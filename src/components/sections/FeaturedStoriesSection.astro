---
import { type CollectionEntry } from 'astro:content';
import FeaturedPostCard from '@/components/cards/FeaturedPostCard.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '@/i18n/utils';

interface Props {
  latestPosts: CollectionEntry<'blog'>[];
}

const { latestPosts } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  id="FeaturedStoriesSection"
  class="bg-white py-16 transition-colors duration-300 dark:bg-slate-900 sm:py-24"
  aria-labelledby="featured-stories-heading"
>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <header class="mb-12 text-center sm:mb-16">
      <h2
        id="featured-stories-heading"
        class="mb-4 text-3xl font-bold text-slate-900 dark:text-white sm:mb-6 sm:text-4xl md:text-5xl"
      >
        {t('home.featuredStories.title')}
      </h2>
      <p class="mx-auto max-w-2xl text-lg text-slate-600 dark:text-slate-400 sm:text-xl">
        {t('home.featuredStories.subtitle')}
      </p>
    </header>

    {
      latestPosts.length > 0 && (
        <div class="mb-12 grid grid-cols-1 gap-4 sm:mb-16 sm:grid-cols-1 sm:gap-6 md:grid-cols-2 md:gap-8">
          {latestPosts.map((post, index) => {
            return <FeaturedPostCard post={post} index={index} />;
          })}
        </div>
      )
    }

    <div class="text-center">
      <a
        href={getLocalizedPath('/blog', lang)}
        class="inline-flex items-center rounded-2xl bg-gradient-to-r from-blue-600 to-indigo-600 px-6 py-3 text-base font-semibold text-white/90 transition-all duration-300 hover:scale-[1.02] hover:bg-slate-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-600 focus-visible:ring-offset-2 dark:bg-slate-800 dark:text-slate-300 dark:ring-offset-slate-900 dark:hover:bg-slate-700 sm:px-8 sm:py-4 sm:text-lg"
      >
        {t('home.featuredStories.viewAll')}
        <svg
          aria-hidden="true"
          class="ml-2 h-5 w-5 transition-transform group-hover:translate-x-1"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 7l5 5m0 0l-5 5m5-5H6"
          >
          </path>
        </svg>
      </a>
    </div>
  </div>
</section>
