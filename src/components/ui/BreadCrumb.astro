---
import { getLangFromUrl } from '@/i18n/utils';
import { BreadCrumbService } from '@/services/BreadCrumbService';
import type { LanguageKey } from '@/i18n/types';

const lang = getLangFromUrl(Astro.url) as LanguageKey;
const breadcrumbs = BreadCrumbService.getBreadCrumbs(Astro.url.pathname, lang);

// Only show breadcrumbs if there are more than 1 item (Home + something else)
// unless we want to always show Home. Usually better to hide on Home page.
const shouldShow = breadcrumbs.length > 1;
---

{
  shouldShow && (
    <div class="mx-auto max-w-7xl px-4 py-4 sm:px-6 lg:px-8">
      <nav aria-label="Breadcrumb" class="mb-2 flex">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          {breadcrumbs.map((item, index) => (
            <li class="inline-flex items-center">
              {index > 0 && (
                <svg
                  class="mx-1 h-4 w-4 text-gray-400"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  xmlns="http://www.w3.org/2000/svg"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                    clip-rule="evenodd"
                  />
                </svg>
              )}

              {item.isLast || !item.url ? (
                <span
                  class={`ml-1 text-sm font-medium md:ml-2 ${
                    item.isLast
                      ? 'max-w-[180px] truncate text-gray-500 dark:text-gray-400 sm:max-w-none'
                      : 'text-gray-700 dark:text-gray-300'
                  }`}
                  title={item.isLast ? item.name : undefined}
                >
                  {index === 0 && (
                    <svg
                      class="mr-2 inline h-4 w-4"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                      xmlns="http://www.w3.org/2000/svg"
                      aria-hidden="true"
                    >
                      <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
                    </svg>
                  )}
                  {item.name}
                </span>
              ) : (
                <a
                  href={item.url}
                  class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-primary-600 dark:text-gray-300 dark:hover:text-primary-400"
                >
                  {index === 0 && (
                    <svg
                      class="mr-2 h-4 w-4"
                      fill="currentColor"
                      viewBox="0 0 20 20"
                      xmlns="http://www.w3.org/2000/svg"
                      aria-hidden="true"
                    >
                      <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
                    </svg>
                  )}
                  {item.name}
                </a>
              )}
            </li>
          ))}
        </ol>
      </nav>
    </div>
  )
}
