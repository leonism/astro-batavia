<!-- Back to Top Button with Scroll Progress -->
<button
  id="back-to-top"
  aria-label="Back to top"
  title="Back to top"
  class="group invisible fixed bottom-6 right-6 z-50 flex h-12 w-12 translate-y-4 items-center justify-center rounded-full bg-white text-blue-600 opacity-0 shadow-lg transition-all duration-300 hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:bg-gray-800 dark:text-blue-400 dark:focus:ring-offset-gray-900"
>
  <!-- Progress Ring SVG -->
  <svg
    class="pointer-events-none absolute inset-0 h-full w-full -rotate-90 transform"
    viewBox="0 0 100 100"
  >
    <!-- Track -->
    <circle
      class="text-gray-100 dark:text-gray-700"
      stroke="currentColor"
      stroke-width="4"
      fill="none"
      cx="50"
      cy="50"
      r="46"
    >
    </circle>
    <!-- Progress -->
    <circle
      id="progress-path"
      class="text-blue-600 transition-all duration-75 ease-out dark:text-blue-400"
      stroke="currentColor"
      stroke-width="4"
      stroke-linecap="round"
      fill="none"
      cx="50"
      cy="50"
      r="46"
      pathLength="1"
      stroke-dasharray="1"
      stroke-dashoffset="1"
    >
    </circle>
  </svg>

  <!-- Arrow Icon -->
  <svg
    class="relative h-6 w-6 transition-transform duration-300 group-hover:-translate-y-1"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 15l7-7 7 7">
    </path>
  </svg>
</button>
