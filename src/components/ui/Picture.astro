---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface Props {
  src: string | ImageMetadata;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  loading?: 'lazy' | 'eager';
  decoding?: 'async' | 'sync' | 'auto';
  sizes?: string;
}

const {
  src,
  alt,
  width,
  height,
  class: className = '',
  loading = 'lazy',
  decoding = 'async',
  sizes = '(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw',
  ...rest
} = Astro.props;

const isRemote = typeof src === 'string' && (src.startsWith('http') || src.startsWith('//'));
const isLocalImport = typeof src === 'object';

const imageProps: any = {
  src,
  alt,
  class: className,
  loading,
  decoding,
  widths: [640, 768, 1024, 1280, 1600],
  sizes,
  quality: 75,
  ...rest,
};

if (width) imageProps.width = width;
if (height) imageProps.height = height;
if (isRemote && !width && !height) imageProps.inferSize = true;
---

{
  isRemote || isLocalImport ? (
    <Image {...imageProps} />
  ) : (
    <picture>
      <source
        srcset={(src as string).replace(/\.[^/.]+$/, '.avif')}
        type="image/avif"
        sizes={sizes}
      />
      <source
        srcset={(src as string).replace(/\.[^/.]+$/, '.webp')}
        type="image/webp"
        sizes={sizes}
      />
      <img
        src={src as string}
        alt={alt}
        width={width}
        height={height}
        class={className}
        loading={loading}
        decoding={decoding}
        {...rest}
      />
    </picture>
  )
}
