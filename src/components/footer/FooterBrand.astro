---
import { useTranslations } from "@/i18n/utils";
import type { LanguageKey } from "@/i18n/types";

interface Props {
  lang: LanguageKey;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<footer class="col-span-1 md:col-span-2">
  <div class="flex items-center gap-2 mt-7 mb-4">
    <svg
      class="w-8 h-8 text-primary-600 dark:text-primary-400"
      viewBox="0 0 32 32"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true">
      <circle
        cx="16"
        cy="16"
        r="14"
        fill="currentColor"
        opacity="0.1">
      </circle>
      <path
        d="M16 8l8 8-8 8-8-8 8-8z"
        fill="currentColor">
      </path>
    </svg>
    <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100">
      Astro Batavia
    </h2>
  </div>

  <p class="text-gray-600 dark:text-gray-300 mb-6 max-w-md">
    {t("meta.description")}
  </p>

