---
import {
  getLangFromUrl,
  useTranslations,
  getLocalizedPath,
} from "@/i18n/utils";
import LanguageSwitcher from "./LanguageSwitcher.astro";
import ThemeToggle from "./ThemeToggle.astro";
import SearchBox from "./SearchBox.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const currentPath = Astro.url.pathname;
---

<header
  class="fixed top-0 z-50 w-full bg-white/80 dark:bg-slate-900/80 backdrop-blur-xl border-b border-slate-200/50 dark:border-slate-700/50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a
          href={getLocalizedPath("/", lang)}
          class="flex items-center space-x-2 group">
          <div
            class="w-8 h-8 bg-gradient-to-br from-blue-600 to-indigo-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg
              class="w-5 h-5 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 10V3L4 14h7v7l9-11h-7z"
              ></path>
            </svg>
          </div>
          <span
            class="text-xl font-bold text-slate-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
            Astro Batavia
          </span>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a
          href={getLocalizedPath("/", lang)}
          class={`font-medium transition-colors duration-200 relative group ${
            currentPath === getLocalizedPath("/", lang)
              ? "text-blue-600 dark:text-blue-400"
              : "text-slate-600 dark:text-slate-300 hover:text-blue-600 dark:hover:text-blue-400"
          }`}>
          {t("nav.home")}
          <span
            class={`absolute -bottom-1 left-0 h-0.5 bg-blue-600 transition-all duration-300 ${
              currentPath === getLocalizedPath("/", lang)
                ? "w-full"
                : "w-0 group-hover:w-full"
            }`}></span>
        </a>
        <a
          href={getLocalizedPath("/blog", lang)}
          class={`font-medium transition-colors duration-200 relative group ${
            currentPath.startsWith(getLocalizedPath("/blog", lang))
              ? "text-blue-600 dark:text-blue-400"
              : "text-slate-600 dark:text-slate-300 hover:text-blue-600 dark:hover:text-blue-400"
          }`}>
          {t("nav.blog")}
          <span
            class={`absolute -bottom-1 left-0 h-0.5 bg-blue-600 transition-all duration-300 ${
              currentPath.startsWith(getLocalizedPath("/blog", lang))
                ? "w-full"
                : "w-0 group-hover:w-full"
            }`}></span>
        </a>
        <a
          href={getLocalizedPath("/search", lang)}
          class={`font-medium transition-colors duration-200 relative group ${
            currentPath === getLocalizedPath("/search", lang)
              ? "text-blue-600 dark:text-blue-400"
              : "text-slate-600 dark:text-slate-300 hover:text-blue-600 dark:hover:text-blue-400"
          }`}>
          {t("nav.search")}
          <span
            class={`absolute -bottom-1 left-0 h-0.5 bg-blue-600 transition-all duration-300 ${
              currentPath === getLocalizedPath("/search", lang)
                ? "w-full"
                : "w-0 group-hover:w-full"
            }`}></span>
        </a>
      </div>

      <!-- Search Box (Desktop) -->
      <div class="hidden lg:block">
        <SearchBox />
      </div>

      <!-- Right side controls -->
      <div class="flex items-center space-x-4">
        <!-- Language Switcher -->
        <LanguageSwitcher />

        <!-- Theme Toggle -->
        <ThemeToggle />

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-button"
          class="md:hidden p-2 rounded-md text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors duration-200"
          aria-label="Toggle mobile menu">
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            ></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div
      id="mobile-menu"
      class="md:hidden hidden pb-4">
      <div class="flex flex-col space-y-2">
        <a
          href={getLocalizedPath("/", lang)}
          class={`px-3 py-2 text-sm font-medium rounded-md transition-colors duration-200 ${
            currentPath === getLocalizedPath("/", lang)
              ? "text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/20"
              : "text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-gray-50 dark:hover:bg-gray-800"
          }`}>
          {t("nav.home")}
        </a>
        <a
          href={getLocalizedPath("/blog", lang)}
          class={`px-3 py-2 text-sm font-medium rounded-md transition-colors duration-200 ${
            currentPath.startsWith(getLocalizedPath("/blog", lang))
              ? "text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/20"
              : "text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-gray-50 dark:hover:bg-gray-800"
          }`}>
          {t("nav.blog")}
        </a>
        <a
          href={getLocalizedPath("/search", lang)}
          class={`px-3 py-2 text-sm font-medium rounded-md transition-colors duration-200 ${
            currentPath === getLocalizedPath("/search", lang)
              ? "text-primary-600 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/20"
              : "text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400 hover:bg-gray-50 dark:hover:bg-gray-800"
          }`}>
          {t("nav.search")}
        </a>

        <!-- Mobile Search -->
        <div class="pt-2">
          <SearchBox />
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
      });

      // Close mobile menu when clicking outside
      document.addEventListener("click", (e) => {
        if (
          !mobileMenuButton.contains(e.target as Node) &&
          !mobileMenu.contains(e.target as Node)
        ) {
          mobileMenu.classList.add("hidden");
        }
      });
    }
  });
</script>
