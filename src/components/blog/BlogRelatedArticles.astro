---
import { getPostUrl, useTranslations } from '@/i18n/utils';
import type { CollectionEntry } from 'astro:content';
import { ui } from '@/i18n/ui';
import Picture from '@/components/ui/Picture.astro';

interface Props {
  relatedPosts: CollectionEntry<'blog'>[];
  lang: keyof typeof ui;
}

const { relatedPosts, lang } = Astro.props;
const t = useTranslations(lang);
---

{
  relatedPosts.length > 0 && (
    <section class="mt-12 border-t border-gray-200 pt-8 dark:border-gray-700">
      <h2 class="mb-6 text-2xl font-bold text-gray-900 dark:text-gray-100">
        {t('blog.relatedPosts')}
      </h2>
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {relatedPosts.map((post) => (
          <a href={getPostUrl(post.slug, lang)} class="group block">
            <div class="flex h-full flex-col overflow-hidden rounded-lg bg-white shadow-md transition-shadow duration-300 hover:shadow-lg dark:bg-gray-800">
              {post.data.heroImage && (
                <Picture
                  src={post.data.heroImage}
                  alt={post.data.title}
                  class="h-48 w-full object-cover"
                  width={600}
                  height={400}
                />
              )}
              <div class="flex flex-grow flex-col p-6">
                <h3 class="mb-2 line-clamp-2 text-xl font-semibold text-gray-900 transition-colors duration-200 group-hover:text-primary-600 dark:text-gray-100 dark:group-hover:text-primary-400">
                  {post.data.title}
                </h3>
                <p class="line-clamp-3 flex-grow text-sm text-gray-600 dark:text-gray-300">
                  {post.data.description}
                </p>
                <div class="mt-4 text-sm font-medium text-primary-600 dark:text-primary-400">
                  {t('blog.readMore')} &rarr;
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </section>
  )
}
