---
import { useTranslations } from '@/i18n/utils';
import type { LanguageKey } from '@/i18n/types';

interface Props {
  previousPostData?: { url: string; title: string };
  nextPostData?: { url: string; title: string };
  lang: LanguageKey;
}

const { previousPostData, nextPostData, lang } = Astro.props;
const t = useTranslations(lang);
---

{
  (previousPostData || nextPostData) && (
    <nav
      class="mt-16 border-t border-gray-200 pt-8 dark:border-gray-700"
      aria-label="Blog post navigation"
    >
      <div
        class={`grid gap-6 ${previousPostData && nextPostData ? 'grid-cols-1 md:grid-cols-2' : 'grid-cols-1'}`}
      >
        {previousPostData && (
          <a
            href={previousPostData.url}
            title={`${t('blog.previousArticle')}: ${previousPostData.title}`}
            class="group flex flex-col rounded-lg border border-gray-200 bg-white p-6 transition-all duration-300 hover:scale-[1.02] hover:border-primary-300 hover:shadow-lg dark:border-gray-700 dark:bg-gray-800 dark:hover:border-primary-600"
          >
            <div class="mb-2 flex items-center text-sm text-gray-500 dark:text-gray-400">
              <svg
                class="mr-2 h-4 w-4 transition-colors group-hover:text-primary-600 dark:group-hover:text-primary-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 19l-7-7 7-7"
                />
              </svg>
              <span class="transition-colors group-hover:text-primary-600 dark:group-hover:text-primary-400">
                {t('blog.previousArticle')}
              </span>
            </div>
            <h3 class="line-clamp-2 text-lg font-semibold text-gray-900 transition-colors group-hover:text-primary-600 dark:text-gray-100 dark:group-hover:text-primary-400">
              {previousPostData.title}
            </h3>
          </a>
        )}

        {nextPostData && (
          <a
            href={nextPostData.url}
            title={`${t('blog.nextArticle')}: ${nextPostData.title}`}
            class="group flex flex-col rounded-lg border border-gray-200 bg-white p-6 text-right transition-all duration-300 hover:scale-[1.02] hover:border-primary-300 hover:shadow-lg dark:border-gray-700 dark:bg-gray-800 dark:hover:border-primary-600 md:items-end"
          >
            <div class="mb-2 flex items-center text-sm text-gray-500 dark:text-gray-400 md:flex-row-reverse">
              <svg
                class="ml-2 h-4 w-4 transition-colors group-hover:text-primary-600 dark:group-hover:text-primary-400 md:ml-0 md:mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"
                />
              </svg>
              <span class="transition-colors group-hover:text-primary-600 dark:group-hover:text-primary-400">
                {t('blog.nextArticle')}
              </span>
            </div>
            <h3 class="line-clamp-2 text-lg font-semibold text-gray-900 transition-colors group-hover:text-primary-600 dark:text-gray-100 dark:group-hover:text-primary-400">
              {nextPostData.title}
            </h3>
          </a>
        )}
      </div>
    </nav>
  )
}
