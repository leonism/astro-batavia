---
interface Props {
  tags?: string[];
}

const { tags = [] } = Astro.props;
---

{
  tags.length > 0 && (
    <div class="flex flex-wrap gap-2 pt-3">
      {tags.slice(0, 3).map((tag: string) => (
        <a
          href={`/blog/tags/${tag.toLowerCase()}`}
          class="inline-flex items-center px-3 py-1 text-xs font-medium transition-colors hover:bg-white/30 bg-white/20 backdrop-blur-sm rounded-full"
          aria-label={`View all posts tagged ${tag}`}>
          {tag}
        </a>
      ))}
    </div>
  )
}
