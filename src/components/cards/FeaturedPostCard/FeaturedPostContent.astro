---
import type { CollectionEntry } from "astro:content";
import PostMeta from "./PostMeta.astro";
import PostTitle from "./PostTitle.astro";
import PostDescription from "./PostDescription.astro";
import PostTags from "./PostTags.astro";

interface Props {
  post: CollectionEntry<"blog">;
  index: number;
  lang: string;
}

const { post, index, lang } = Astro.props;
---

<div
  class="relative flex h-full flex-col justify-end text-white p-4 sm:p-8 md:p-10 lg:p-12">
  <div class="z-10 space-y-2">
    <PostMeta
      post={post}
      lang={lang}
    />
    <PostTitle
      post={post}
      index={index}
      lang={lang}
    />
    <PostDescription
      post={post}
      index={index}
    />
    <PostTags tags={post.data.tags} />
  </div>
</div>
