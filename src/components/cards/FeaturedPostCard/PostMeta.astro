---
import type { CollectionEntry } from "astro:content";
import Picture from "@/components/ui/Picture.astro";

interface Props {
  post: CollectionEntry<"blog">;
  authorImage: string;
  authorSlug: string;
}

const { post, authorImage, authorSlug } = Astro.props;
---

<div class="flex items-center gap-3 text-sm text-blue-200 sm:gap-2">
  <div class="flex items-center gap-2 font-medium group-author">
    <div class="relative w-10 h-10 rounded-full overflow-hidden border-2 border-transparent group-hover/author:border-blue-400 transition-colors duration-300 avatar-gradient">
      <Picture
        src={post.data.authorImage || "/images/placeholder-hero.svg"}
        alt={post.data.author}
        class="absolute inset-0 w-full h-full object-cover rounded-full"
        width={40}
        height={40}
      />
    </div>
    <span class="transition-colors duration-300 group-hover/author:text-blue-300 truncate">
      {post.data.author}
    </span>
  </div>

  <span class="w-1 h-1 rounded-full bg-blue-200" aria-hidden="true"></span>

  <time
    datetime={new Date(post.data.pubDate).toISOString()}
    class="flex items-center gap-1.5 text-blue-200/80 font-light"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      fill="none"
      class="w-[1em] h-[1em]"
      aria-hidden="true"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5"
      ></path>
    </svg>
    {
      new Date(post.data.pubDate).toLocaleDateString("en-US", {
        year: "numeric",
        month: "short",
        day: "numeric",
      })
    }
  </time>
</div>
