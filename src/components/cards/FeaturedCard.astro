---
interface Props {
  title: string;
  description: string;
  link?: string;
  iconGradientFrom: string;
  iconGradientTo: string;
}

const { title, description, link, iconGradientFrom, iconGradientTo } = Astro.props;

const CardElement = link ? 'a' : 'div';
---

<CardElement
  href={link}
  class="group relative block rounded-3xl bg-white p-8 shadow-lg transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl dark:bg-slate-900"
>
  <div
    class={`absolute top-6 right-6 w-12 h-12 bg-gradient-to-br ${iconGradientFrom} ${iconGradientTo} rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300`}
    aria-hidden="true"
  >
    <slot name="icon" />
  </div>

  <h3
    class="mb-4 text-2xl font-bold text-slate-900 transition-colors group-hover:text-blue-600 dark:text-white dark:group-hover:text-blue-400"
  >
    {title}
  </h3>
  <p class="leading-relaxed text-slate-600 dark:text-slate-400">
    {description}
  </p>

  {
    link && (
      <div class="mt-6 flex items-center font-medium text-blue-600 transition-transform group-hover:translate-x-2 dark:text-blue-400">
        <span class="text-sm">Learn more</span>
        <svg
          class="ml-2 h-4 w-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 7l5 5m0 0l-5 5m5-5H6"
          />
        </svg>
      </div>
    )
  }
</CardElement>
