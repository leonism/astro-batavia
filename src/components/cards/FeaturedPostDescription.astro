---
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
  index: number;
}

const { post, index } = Astro.props;
---

<p
  class="line-clamp-2 leading-relaxed text-blue-100 sm:line-clamp-none"
  class:list={[
    index === 0 ? 'max-w-2xl text-base sm:text-lg md:text-xl' : 'text-sm sm:text-base md:text-lg',
  ]}
>
  {post.data.description}
</p>
